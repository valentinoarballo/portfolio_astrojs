---
import Card from './Card.astro';
import CardLive from './CardLive.astro';
---

    <section id="work" transition:name="section-contact" class="bg-cover bg-center bg-no-repeat my-12 CardMove">

        <article class="flex flex-col items-center mt-12 w-full border-b-2 pb-8">
            <h4 class="text-6xl font-bold px-8 border-black">
                My Projects
            </h4>
            <p class="text-center mt-6 px-5">
                Here you can find some of my personal projects that showcase my skills and interest in various domains.
            </p>
        </article>

        <section class="flex p-12 gap-12 flex-wrap justify-evenly z-10 bg-white">

            <Card
            title='TuXchange',
            body='A web site of a student exchange company.',
            href='https://github.com/valentinoarballo/tuxchange-bootstrap',
            src='/assets/images/tuxchange.jpg',
            tags={['Python', 'Flask', 'Bootstrap']}
            />

            <Card
            title='Tapple',
            body='E Commerce of Apple products with AI assistant.',
            href='https://github.com/valentinoarballo/Tapple',
            src='/assets/images/tapple.png',
            tags={['Python', 'Flask', 'Tailwind', 'Docker']}
            />

            <CardLive
            title='Tesla',
            body='A clone of the tesla motors landing page.',
            href='https://github.com/valentinoarballo/TeslaClon',
            hrefLive='https://animated-taffy-0fb30b.netlify.app/',
            src='/assets/images/tesla.png',
            tags={['Astro JS', 'JavaScript', 'Tailwind']}
            />

            <Card
            title='Space X',
            body="A Space X rocket wiki providing information fetched from two API's.",
            href='https://github.com/valentinoarballo/SpaceX',
            src='/assets/images/SpaceX.png',
            tags={['Astro JS', 'TypeScript', 'Tailwind']}
            />

            <Card
            title='Big data',
            body='A predictive financial analysis performed in R based on a database generated by a large-scale web scraper created in javascript.',
            href='https://github.com/valentinoarballo/Data_Analysis_With_R',
            src='/assets/images/bigdata.jpg',
            tags={['R','JavaScript','MySQL','Cheerio','Axios', 'Sequelize', 'Express']}
            />

            <Card
            title='Python API',
            body='Python API for a blog, manages users profiles, posts and comments.',
            href='https://github.com/valentinoarballo/EFI_devopsXpython',
            src='/assets/images/flask.jpg',
            tags={['Python','Flask','PyTest','Marshmallow','SQLAlchemy', 'Docker']}
            />

        </section>

        <div class="w-full flex justify-center">
            <a type="submit" href="https://github.com/valentinoarballo" target="blank" class="hover:text-white text-black hover:font-black font-bold hover:border-white border border-black bg-gradient-to-r hover:from-orange-400 hover:to-orange-500 text-sm py-2.5 mt-12 px-44 text-center">
                See more
            </a>
        </div>



    </section>
