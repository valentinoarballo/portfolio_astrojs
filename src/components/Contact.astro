---

	<section id="contact" transition:name="section-contact" class="bg-cover bg-center bg-no-repeat py-12 my-12">

        <article class="flex flex-col items-center mt-12 w-full mb-8 border-b-2 pb-8">
            <h4 class="text-6xl font-bold px-8 border-black">
                Contact Me
            </h4>
            <p class="text-center mt-6">
                Let's create something together
            </p>
        </article>
    
        <div class="flex justify-evenly flex-wrap">

            <section class="bg-white xl:w-1/3 lg:2/4  w-full">
                <div class="pt-8 mb-6 lg:pt-16 px-4">
                    <form name="contact" method="POST" data-netlify="true" onSubmit="submit" data-netlify-honeypot="bot-field" class="space-y-8">
        
                        <div>
                            <input class="hidden" name="bot-field">
                            <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Your
                                email</label>
                            <input type="email" id="email"
                                class="shadow-lg bg-gray-50 border border-gray-300 text-gray-900 text-sm block w-full p-2.5"
                                placeholder="name@Gmail.com" 
                                required
                                id="email"
                                name="email"
                                >
                        </div>
        
                        <div>
                            <label for="subject" class="block mb-2 text-sm font-medium text-gray-900">Subject</label>
                            <input type="text" id="subject"
                                class="block p-3 w-full text-sm text-gray-900 bg-gray-50  border border-gray-300 shadow-lg"
                                placeholder="Let us know how I can help you" 
                                required
                                id="subject"
                                name="subject"
                                >
                        </div>
        
                        <div class="sm:col-span-2">
                            <label for="message" class="block mb-2 text-sm font-medium text-gray-900">Your
                                message</label>
                            <textarea id="message" rows="6"
                                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50  shadow-lg border border-gray-300"
                                placeholder="Leave a comment..."
                                id="message"
                                name="message"
                                ></textarea>
                        </div>
        
                        <button type="submit" class="hover:text-white text-black font-bold hover:border-none border border-black bg-gradient-to-br hover:from-pink-500 hover:to-orange-400 text-sm px-5 py-2.5 text-center me-2 mb-2 w-full">
                            Send message
                        </button>
        
        
                    </form>
                </div>
            </section>


        </div>

    </section>



