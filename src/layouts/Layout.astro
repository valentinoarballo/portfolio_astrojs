---
import { ViewTransitions } from "astro:transitions";

interface Props {
    title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Valentino Arballo Portfolio" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="src/css/LayoutStyle.css" rel="stylesheet" />
        <title>{title}</title>
        <ViewTransitions />
    </head>

    <body>
        <header class="flex justify-center w-2/3 py-2 border-b-2 font-semibold">
            <a href="/" class="backdrop-blur-md py-4 px-8 border-r-2">Home</a>
            <a href="/works" class="backdrop-blur-md py-4 px-8 border-r-2"
                >Works</a
            >
            <a href="/contact" class="backdrop-blur-md py-4 px-8">Contact Me</a>
        </header>

        <slot />

    </body>
</html>